 <!-- Raibuon search bar -->
<div class="wireframe searchbar-main" style="z-index: 99; position: relative;">
  <%= form_tag movies_path, method: :get do %>
    <div class="ro-search-bar-container wireframe" style="">
      <%= text_field_tag :query,
      params[:query],
      class: "ro-search-bar__bar ro-font-main",
      placeholder: "movie, genre, year",
      autocomplete: "off"
      %>
      <%= button_tag(type: "Search", class: "ro-search-bar__button") do %>
        <i class="fas fa-search"></i>
      <% end %>
    </div>
  <% end %>
</div>
